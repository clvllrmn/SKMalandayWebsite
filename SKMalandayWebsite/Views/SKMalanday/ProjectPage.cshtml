@{
    Layout = "~/Views/Shared/_SKMalandayLayout.cshtml";
}

<link rel="stylesheet" href="../content/Project.css">

<main class="main-section">

    <div class="projects-header">
        <h1>OUR PROJECTS</h1>
        <p>Explore the impactful initiatives of SK Malanday that make a difference in our community.</p>
    </div>

    <div class="filter-container">
        <button class="filter-btn" data-category="all">All</button>
        <button class="filter-btn" data-category="community">Community Service</button>
        <button class="filter-btn" data-category="education">Education</button>
        <button class="filter-btn" data-category="entrepreneurship">Entrepreneurship</button>
        <button class="filter-btn" data-category="health">Health</button>
        <button class="filter-btn" data-category="sports">Sports</button>
    </div>

    <div id="project-grid">

        <div class="project-card" data-category="education">
            <img src="~/Content/Images/FreeHatidSundo.png" alt="Free Hatid-Sundo" />
            <div class="p-6">
                <h3 class="text-xl font-bold text-[#166534] mb-2">Free Hatid-Sundo for PLMar Graduates</h3>
                <p class="text-sm text-gray-600">A program designed to assist graduating students on their special day.</p>
            </div>
        </div>
        <div class="project-card" data-category="education">
            <img src="~/Content/Images/CollegeExam.jpg" alt="College Exam" />
            <div class="p-6">
                <h3 class="text-xl font-bold text-[#166534] mb-2">Free College Entrance Exam Reviewer</h3>
                <p class="text-sm text-gray-600">A program designed to assist graduating students on their special day.</p>
            </div>
        </div>

        <div class="project-card" data-category="community">
            <img src="~/Content/Images/cleanup2.jpg" alt="Barangay Clean-up Drive" />
            <div class="p-6">
                <h3 class="text-xl font-bold text-[#243119] mb-2">Barangay Clean-up Drive</h3>
                <p class="text-sm text-gray-600">A series of community-wide clean-up activities to promote environmental awareness.</p>
            </div>
        </div>

        <div class="project-card" data-category="education">
            <img src="~/Content/Images/FreePrinting.png" alt="Free Printing Services" />
            <div class="p-6">
                <h3 class="text-xl font-bold text-[#243119] mb-2">Free Printing Services</h3>
                <p class="text-sm text-gray-600">Free printing, photocopying, and scanning services for students.</p>
            </div>
        </div>

        <div class="project-card" data-category="entrepreneurship">
            <img src="~/Content/Images/YouthFunFair.jpg" alt="Youth Bazaar" />
            <div class="p-6">
                <h3 class="text-xl font-bold text-[#243119] mb-2">Youth Entrepreneurship Bazaar</h3>
                <p class="text-sm text-gray-600">A platform for young entrepreneurs to showcase and sell their products, fostering business skills.</p>
            </div>
        </div>

        <div class="project-card" data-category="health">
            <img src="~/Content/Images/HealthAid.png" alt="World Aids Day" />
            <div class="p-6">
                <h3 class="text-xl font-bold text-[#243119] mb-2">World Aids Day</h3>
                <p class="text-sm text-gray-600">World AIDS Day is a time for reflection, support, and action.</p>
            </div>

        </div>


        <div class="project-card" data-category="health">
            <img src="~/Content/Images/Tuli.png" alt="Libreng Tuli" />
            <div class="p-6">
                <h3 class="text-xl font-bold text-[#243119] mb-2">Libreng Tuli</h3>
                <p class="text-sm text-gray-600">This initiative provides a safe, clean, and accessible health service for young men in our barangay.</p>
            </div>

        </div>

        <div class="project-card" data-category="sports">
            <img src="~/Content/Images/SKB.jpg" alt="SK Basketball League" />
            <div class="p-6">
                <h3 class="text-xl font-bold text-[#243119] mb-2">SK Basketball League</h3>
                <p class="text-sm text-gray-600">A seasonal basketball league for youth to promote sportsmanship and physical fitness.</p>
            </div>
        </div>

        <div class="project-card" data-category="sports">
            <img src="~/Content/Images/SKBadminton.jpg" alt="SK Sportsfest Badminton Tournament" />
            <div class="p-6">
                <h3 class="text-xl font-bold text-[#243119] mb-2">SK Sportsfest Badminton Tournament</h3>
                <p class="text-sm text-gray-600">An inclusive badminton tournament open to all skill levels, promoting agility and fun.</p>
            </div>
        </div>

        <div class="project-card" data-category="sports">
            <img src="~/Content/Images/SKVolleyball.jpg" alt="Barangay Volleyball Cup" />
            <div class="p-6">
                <h3 class="text-xl font-bold text-[#243119] mb-2">SK Sportsfest Volleyball Cup</h3>
                <p class="text-sm text-gray-600">A yearly volleyball event that strengthens teamwork and builds camaraderie.</p>
            </div>
        </div>

        <div class="project-card" data-category="sports">
            <img src="~/Content/Images/SKBilliards.jpg" alt="Billiards Challenge" />
            <div class="p-6">
                <h3 class="text-xl font-bold text-[#243119] mb-2">SK Sportsfest Billiards Challenge</h3>
                <p class="text-sm text-gray-600">A casual yet competitive billiards tournament fostering focus and precision.</p>
            </div>
        </div>

        <div class="project-card" data-category="sports">
            <img src="~/Content/Images/SKChess.jpg" alt="Youth Chess Cup" />
            <div class="p-6">
                <h3 class="text-xl font-bold text-[#243119] mb-2">SK Sportsfest Youth Chess Cup</h3>
                <p class="text-sm text-gray-600">A mental sport tournament that sharpens critical thinking and strategy skills.</p>
            </div>
        </div>
    </div>
</main>
