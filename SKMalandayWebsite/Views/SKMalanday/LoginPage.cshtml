@{
    Layout = "~/Views/Shared/_SKMalandayLayout.cshtml";
}

<link rel="stylesheet" href="~/Content/Login.css" />

<div class="main-container">

    
    <div class="title-section">
        <h1 class="title-h1">USER LOGIN</h1>
        <p class="subtitle">Access your account to manage your profile.</p>
    </div>

    
    <div class="form-card">
        @using (Html.BeginForm("LoginPage", "SKMalanday", FormMethod.Post))
        {
            
            <div class="form-group">
                <label for="Username" class="label">
                    Username or Email <span class="required-star">*</span>
                </label>
                <input 
                    type="text" 
                    id="Username" 
                    name="Username"
                    required 
                    ng-model="adminname"
                    placeholder="Enter your username or email"
                    class="input-field"
                />
            </div>

            
            <div class="form-group-password">
                <label for="Password" class="label">
                    Password <span class="required-star">*</span>
                </label>
                <input 
                    type="password" 
                    id="Password" 
                    name="Password"
                    required 
                    ng-model="adminpw"
                    placeholder="Enter your password"
                    class="input-field"
                />
                <div class="forgot-password-link">
                    <a href="#">Forgot Password?</a>
                </div>
            </div>

            <button type="submit" class="login-button" ng-click="LoginAdmin()">
                Login
            </button>

         
            <p class="register-prompt">
                Don't have an account?
                <a href="#">Register Here</a>
            </p>
        }
    </div>

</div>

