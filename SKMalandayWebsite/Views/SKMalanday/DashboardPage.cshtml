@{
    Layout = "~/Views/Shared/_SKMalandayLayout.cshtml";
}
<link rel="stylesheet" href="../content/Dashboard.css">

<div ng-app="SKMalandayApp" ng-controller="SKMalandayController" class="dashboard-container">

    <h1>SK Malanday Dashboard</h1>

    <!-- Upload Image -->
    <div class="upload-box">
        <label>Upload Project Picture:</label>

        <input type="file" id="imageInput" accept="image/*"
               onchange="angular.element(this).scope().previewImage(this)" />

        <label style="margin-top:10px;">Project Title:</label>
        <input type="text" ng-model="projectTitle" placeholder="Enter project title">
    </div>

    <!-- Preview -->
    <div ng-if="tempImage" class="preview-container">
        <img ng-src="{{tempImage}}" class="preview-img" />
        <button class="remove-btn" ng-click="removePreview()">Remove</button>
    </div>

    <!-- Add Button -->
    <button class="add-btn" ng-click="addToList()">Add to UI List</button>

    <!-- Project Gallery -->
    <div class="project-grid">
        <div class="project-card" ng-repeat="p in projectList">
            <img ng-src="{{p.image}}">
            <h3>{{p.title}}</h3>
        </div>
    </div>

</div>
